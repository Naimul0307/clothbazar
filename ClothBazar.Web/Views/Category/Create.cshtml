
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">

        <h2>Create</h2>
        <hr />
        <form method="post">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="Name" />
            </div>
            <div class="form-group">
                <label>Description</label>
                <input class="form-control" name="Description" />
            </div>
            <div class="form-group">
                <label> Image</label>
                <input id="ImageURL" name="ImageURL" type="hidden" />
                <input class="form-control" id="imageUplode" name="image" type="file" accept=" .png , .jpg" />
            </div>

            <div class="form-group">
                <div class="thumb">
                    <img id="categoryImage" />
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label>Is Featured ?</label>
                    <div class="row">
                        <div class="form-control col-md-4">
                            <input class="form-control" type="radio" name="isFeatured" value="True" />True
                        </div>
                        <div class="form-control col-md-4">
                            <input class="form-control" type="radio" name="isFeatured" value="False" />False
                        </div>
                    </div>
                </div>
            </div>

            <button class="form-control btn btn-danger" type="submit">Save</button>
        </form>
    </div>


@*uplode Mulitiple/Single Image*@
<script>
    $("#imageUplode").change(function () {
        debugger;
        var element = this;
        var formData = new FormData();
        var totalFiles = element.files.length;
        for (var i = 0; i < totalFiles; i++) {
            var file = element.files[i];
            formData.append("Photo", file);
        }

        $.ajax({
            type: "Post",
            url: "/Shared/UploadImage", 
            data: formData,
            dataType: "Json",
            contentType: false,
            processData: false
        })
        .done(function (response) {
                debugger;
            console.log(response);
            if (response.Success == true) {
                $("#ImageURL").val(response.ImageURL);
                $("#categoryImage").attr("src", response.ImageURL);
            }
         })
        .file(function (XMLHttpRequest, textStatus, erroThrown) {
                alert("Fail");
          });
    })
</script>