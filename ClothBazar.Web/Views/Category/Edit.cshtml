@model ClothBazar.Entities.Category
@{
    ViewBag.Title = "Edit";
    var trueChecked = Model.isFeatured ? "checked" : string.Empty;
    var falseChecked = !Model.isFeatured ? "checked" : string.Empty;
}

    <div class="container">
        <h2>Edit</h2>
        <hr />
        <form method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="Name" />
            </div>
            <div class="form-group">
                <label>Description</label>
                <input class="form-control" name="Description" />
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label>Is Featured ?</label>
                    <div class="row">
                        <div class="form-control col-md-4">
                            <input class="form-control" type="radio" name="isFeatured" value="True" @trueChecked />True
                        </div>
                        <div class="form-control col-md-4">
                            <input class="form-control" type="radio" name="isFeatured" value="False" @falseChecked />False
                        </div>
                    </div>
                </div>
            </div>
            <button class="form-control btn btn-danger" type="submit">Save</button>
        </form>
    </div>

